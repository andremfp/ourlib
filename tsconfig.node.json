{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS", // Use CommonJS for Node.js compatibility
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node", "jest", "@types/jest"], // Add Node.js types
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "vite.config.ts",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "src/__tests__/**/*.ts"
  ]
}
